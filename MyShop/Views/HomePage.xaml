<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="MyShop.HomePage"
	Title="{Binding Title}"
	IsBusy="{Binding IsBusy}">
	<ContentPage.Content>
		<Grid Padding="10" RowSpacing="10" ColumnSpacing="10">
			<Grid.RowDefinitions>
				<RowDefinition Height="auto"/>
			</Grid.RowDefinitions>
			<Button 
				x:Name="BtnForum"
				Grid.Row="1"
				BackgroundColor="#f4c031"
				BorderRadius="5"
				TextColor="White" 
				Text="Forum"/>

            <Button 
				x:Name="BtnProducts"
				Grid.Row="1"
				Grid.Column="1"
				BackgroundColor="#f4c031" 
				BorderRadius="5"
				TextColor="White"
				Text="Products"/>

            <Button 
				x:Name="BtnLocations"
				Grid.Row="2"
				BackgroundColor="#f4c031"
				BorderRadius="5"
				TextColor="White" 
				Text="Locations"/>
			<Button 
				x:Name="BtnImageSubmit"
				Grid.Row="2"
				Grid.Column="1"
				BackgroundColor="#f4c031" 
				BorderRadius="5"
				TextColor="White"
				Text="Image Submit"/>

            <Button 
				x:Name="BtnLocalEvents"
				Grid.Row="3"
				BackgroundColor="#f4c031"
				BorderRadius="5"
				TextColor="White" 
				Text="Local Events"/>
			<Button 
				x:Name="BtnCalculations"
				Grid.Row="3"
				Grid.Column="1"
				BackgroundColor="#f4c031" 
				BorderRadius="5"
				TextColor="White"
				Text="Calculations"/>
		</Grid>
	</ContentPage.Content>
</ContentPage>
